<div class="row">
  <div class="col-sm-12">
    
    <% if @post.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= t('common.errors') %></h5>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for @post do |f| %>
      <div class="form-group row">
        <%= f.label :title, "Заголовок", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :body, "Сообщение", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.trix_editor :body, class: "form-control", rows: "14" %>
        </div>
      </div>

      <%= f.submit 'Сохранить', class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
