<div class="row">
  <div class="col-sm-8">
    <%= form_for @post do |f| %>
      <div class="form-group row">
        <%= f.label :title, "Заголовок", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :body, "Сообщение", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_area :body, class: "form-control", rows: "14" %>
        </div>
      </div>

      <%= f.submit 'Сохранить', class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
