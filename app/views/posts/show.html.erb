<h4>Заголовок: <%= @post.title %></h4>

<h5>Сообщение:</h5>
<p><%= @post.body %></p>
<p style="font-size: 10px; color: gray;">
  <%= @post.created_at.in_time_zone('Moscow').strftime("%d-%m-%Y %H:%M") %>
</p>
<%= link_to "Edit", edit_post_path(@post) %> | <%= link_to "Delete",  post_path(@post), method: :delete, data: { confirm: "Вы действительно хотите удалить эту статью ?"} %>

<hr>
<h5>Комментарии:</h5>


<% @post.comments.each do |comment| %>

<p>
  <%= comment.message %>
</p>
<p style="font-size: 10px; color: gray;">
  <%= comment.created_at.in_time_zone('Moscow').strftime("%d-%m-%Y %H:%M") %>
</p>

<hr>


<% end %>

<div class="row">
  <div class="col-sm-6">
    <%= form_for([@post, @post.comments.build]) do |f| %>

      <div class="form-group row">
        <%= f.label :message, "Сообщение", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_area :message, class: "form-control" %>
        </div>
      </div>

      <%= f.submit 'Добавить', class: "btn btn-primary"%>

    <% end %>
  </div>
</div>
