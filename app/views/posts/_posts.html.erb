

<% @posts.each do |post| %>

  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <span class="badge badge-default">Автор: <%= post.user.username %></span>
      <h1 class="display-3"><%= post.title %></h1>
      <section class="post-body clearfix">
        <p class="lead"> <%= image_tag post.image.url(:thumb), class: 'img-thumbnail thumb' if post.image? %>
        <%= post.body.html_safe %></p>
      </section>
      <%= link_to "Просмотр", post_path(post), class: "badge badge-pill badge-info" %> <%= link_to "Редактировать", edit_post_path(post), class: "badge badge-pill badge-info" %> <%= link_to "Удалить",  post_path(post), method: :delete, class: "badge badge-pill badge-info", data: { confirm: "Вы действительно хотите удалить эту статью ?"} %>

    </div>
  </div>
<% end %>

<div class="container"><br>
  <%= will_paginate @posts, renderer: 'BootstrapPaginationHelper::LinkRenderer' %>
</div>
